<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_pub_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="2012/09/23"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/article_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:fontFamily="serif"
            android:text="This is a Title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/article_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line line line line line line line line line line line line line line line line line line"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceBody2" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
